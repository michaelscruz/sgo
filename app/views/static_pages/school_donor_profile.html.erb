            <colgroup>
              <col class="w-15">
              <col class="w-15">
              <col class="w-20">
              <col class="w-50">
            </colgroup>

            <thead>
              <tr>
                <th>
                  ID
                </th>
                <th>
                  Amount
                </th>
                <th>
                  Method
                </th>
                <th>
                  Date
                </th>
              </tr>
            </thead>

            <tbody>

              <tr>
                <td>
                  <%= link_to("0012012", "#") %>
                </td>
                <td>
                  $300
                </td>
                <td>
                 	Credit Card
                </td>
                <td>
                   10/22/2014
                </td>
              </tr>

            </tbody>

          </table>

        </div>

      </section>

				<!-- Notes - Content items with a large textarea at the bottom -->
				<section class="box">

					<header class="box-header">
						Notes
					</header>

					<div class="box-content">

						<div class="box-items">

							<div class="box-item">

								<h3 class="title">
									<a href="#">Tyler Henke</a>
