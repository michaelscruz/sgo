			<div class="xl-12 l-12 ltl-12">

				<%= form_tag "#", method: :get, :class => "box form form-normal" do %>

				<div class="box-header">
					Actions
				</div>

				<div class="box-content">

					<div class="grid">

						<div class="xl-3 l-3 ltl-12">
							<%= link_to("Request Disbursement", "#", :class => "btn btn-secondary btn-block open-overlay") %>
						</div>

					</div>

				</div>
				<% end %>

				<!-- About - List of inputs -->
				<section class="box">

					<header class="box-header">
						About
					</header>

					<form class="box-content form form-horizontal xl-4-and-8 l-4-and-8 ltl-12-and-0">

						<label class="form-field">
							<span class="label">Last Disbursement</span>
							<span class="input placeholder">
								10/20/2015
							</span>
						</label>

						<label class="form-field">
							<span class="label">Last Disbursement Amount</span>
							<span class="input placeholder">
