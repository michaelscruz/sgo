<article class="citizen profile">
	
	<%= render 'shared/back_header', :c => "Home", :l => household_root_path %>

	<div class="wrapper">

		<div class="grid">

			<!-- User info -->
			<div class="xl-12 l-12 ltl-12">

				<%= form_for @household, :html => {:class => "box form form-normal"} do |f| %>

				<div class="box-header">
					Edit Household
				</div>

				<div class="box-content narrow">

					<h2>Contact Information</h2>

					<div class="grid">
						<div class="xl-12 l-12 ltl-12">
							<label class="form-field">
								<span class="label">Address</span>
								<%= f.text_field :address, :class => "input" %>
							</label>
						</div>
					</div>

					<div class="grid">
						<div class="xl-12 l-12 ltl-12">
							<label class="form-field">
								<span class="label">Address 2</span>
								<%= f.text_field :address_two, :class => "input" %>
							</label>
						</div>
					</div>

					<div class="grid">
						<div class="xl-6 l-6 ltl-12">
							<label class="form-field">
								<span class="label">City</span>
								<%= f.text_field :city, :class => "input" %>
							</label>
						</div>
						<div class="xl-2 l-2 ltl-12">
							<label class="form-field">
								<span class="label">State</span>
								<div class="select">
									<select class="input" id="school_type_id" name="school_type_id">
										<option value="1">IN</option>
									</select>
								</div>
							</label>
						</div>
						<div class="xl-4 l-4 ltl-12">
							<label class="form-field">
								<span class="label">Zip</span>
								<%= f.text_field :zip, :class => "input" %>
							</label>
						</div>
					</div>

					<hr>

					<div class="grid">
						<div class="xl-4 l-4 ltl-12">
							<label class="form-field">
								<span class="label">Annual Income</span>
								<%= f.text_field :income, :class => "input" %>
							</label>
						</div>
						<div class="xl-3 l-3 ltl-12">
							<label class="form-field">
								<span class="label">Number in Household</span>
								<%= f.text_field :number_in_household, :class => "input" %>
							</label>
						</div>
					</div>



					<hr>

					<%= f.submit "Save Information", :class => "btn btn-secondary btn-block" %>

				</div>

				<% end %>

			</div>

		</div>

	</div>

</article>