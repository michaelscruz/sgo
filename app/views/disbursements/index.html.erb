<h1>Listing disbursements</h1>

<table>
  <thead>
    <tr>
      <th>Disburse date</th>
      <th>Amount</th>
      <th>Type</th>
      <th>Awards</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disbursements.each do |disbursement| %>
      <tr>
        <td><%= disbursement.disburse_date %></td>
        <td><%= disbursement.amount %></td>
        <td><%= disbursement.type %></td>
        <td><%= disbursement.awards %></td>
        <td><%= disbursement.status %></td>
        <td><%= link_to 'Show', disbursement %></td>
        <td><%= link_to 'Edit', edit_disbursement_path(disbursement) %></td>
        <td><%= link_to 'Destroy', disbursement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

