<article class="profile">
  
  <div class="wrapper">
    
    <div class="grid">

      <div class="xl-6 l-6 ltl-12">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "box form form-normal" }) do |f| %>

        <div class="box-header">
          Edit Profile
        </div>

        <div class="box-content">

          <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <% resource.errors.full_messages.each do |msg| %>
            <%= msg %><br>
            <% end %>
          </div>
          <% end %>

          <label class="form-field">
            <span class="label">First Name</span>
            <%= f.text_field :first_name, autofocus: true, :class => "input" %>
          </label>

          <label class="form-field">
            <span class="label">Last Name</span>
            <%= f.text_field :last_name, autofocus: true, :class => "input" %>
          </label>

           <label class="form-field">
            <span class="label">Email</span>
            <%= f.email_field :email, autofocus: true, :class => "input" %>
          </label>

          <label class="form-field">
            <span class="label">New Password</span>
             <%= f.password_field :password, autocomplete: "off", :class => "input" %>
          </label>

          <label class="form-field">
            <span class="label">Confirm New Password</span>
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "input" %>
          </label>

          <hr>

          <label class="form-field">
            <span class="label">Current Password</span>
            <%= f.password_field :current_password, autocomplete: "off", :class => "input" %>
          </label>

          <%= f.submit "Update Profile", :class => "btn btn-secondary btn-block" %>

        </div>

        <% end %>

      </div>

    </div>

  </div>

</article>
