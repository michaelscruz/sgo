<article class="profile">

   <%= render 'shared/basic_header' %>
  
  <div class="wrapper">
    
    <div class="grid">

      <div class="xl-6 l-6 ltl-12 center-x">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "box form form-normal sign-in" }) do |f| %>

        <div class="box-header">
          Sign Up
        </div>

        <div class="box-content">

          <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <% resource.errors.full_messages.each do |msg| %>
            <%= msg %><br>
            <% end %>
          </div>
          <% end %>

          <label class="form-field">
            <span class="label">First Name</span>
            <%= f.text_field :first_name, autofocus: true, :class => "input" %>
          </label>

          <label class="form-field">
            <span class="label">Last Name</span>
            <%= f.text_field :last_name, autofocus: true, :class => "input" %>
          </label>

           <label class="form-field">
            <span class="label">Email</span>
            <%= f.email_field :email, autofocus: true, :class => "input" %>
          </label>

          <label class="form-field">
            <span class="label">Password</span>
             <%= f.password_field :password, autocomplete: "off", :class => "input" %>
          </label>

          <label class="form-field">
            <span class="label">Confirm Password</span>
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "input" %>
          </label>

          <label class="form-field checkbox-wrap">
            I accept the <a href="#">terms of use</a> of this site
            <%= f.check_box :terms_of_use %>
          </label>

          <%= f.submit "Sign Up", :class => "btn btn-secondary btn-block" %>

          <hr>

          <div class="help-actions">
            <%= link_to("Nevermind, take me back to sign in", new_user_session_path) %>
          </div>

        </div>

        <% end %>

      </div>

    </div>

  </div>

</article>
